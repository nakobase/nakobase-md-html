{
  "name": "@nakobase/nakobase-md-html",
  "version": "1.0.0",
  "description": "Convert Markdown to **sanitized HTML** and apply consistent styles â€“ simple, secure, and styled.",
  "main": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "bin": "./dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js"
    },
    "./styles/style.css": {
      "import": "./dist/styles/style.css"
    }
  },
  "files": [
    "dist/esm",
    "dist/styles",
    "README.md",
    "LICENSE"
  ],
  "workspaces": [
    "test-app"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:types": "tsc --project tsconfig.esm.json",
    "build:js": "babel src --extensions .ts,.tsx --ignore **/*.d.ts --out-dir dist/esm",
    "build:styles": "sass src/styles/style.scss:dist/styles/style.css --no-source-map --style compressed",
    "build": "pnpm run clean && pnpm run build:types && pnpm run build:styles && pnpm run build:js",
    "start": "pnpm run build && node dist/esm/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nakobase/nakobase-md-html.git"
  },
  "homepage": "https://github.com/nakobase/nakobase-md-html#readme",
  "bugs": {
    "url": "https://github.com/nakobase/nakobase-md-html/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "github",
    "cli",
    "nakobase",
    "markdown",
    "html",
    "nodejs"
  ],
  "author": "NakoBase",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.7",
    "@semantic-release/npm": "^12.0.1",
    "@types/jest": "^29.5.14",
    "@types/markdown-it": "^12.2.3",
    "@types/markdown-it-container": "^2.0.10",
    "@types/node": "^22.4.2",
    "@types/prismjs": "^1.26.5",
    "@types/sanitize-html": "^2.15.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "babel-plugin-prismjs": "^2.1.0",
    "cpx": "^1.5.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "sass": "^1.89.0",
    "semantic-release": "^24.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@steelydylan/markdown-it-imsize": "^1.0.2",
    "markdown-it": "^12.3.2",
    "markdown-it-container": "^2.0.0",
    "markdown-it-custom-block": "^1.0.0",
    "markdown-it-inline-comments": "^1.0.1",
    "markdown-it-task-lists": "^2.1.1",
    "prismjs": "^1.30.0",
    "sanitize-html": "^2.16.0"
  }
}
